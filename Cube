package building;
import java.awt.*;

public class Cube {
	int x,y;
	public Cube(){
		
	}
	public void CubeBuild(Graphics2D cube, int x,int y, int width,int height,Color color){
		this.x=x;
		this.y=y;
		cube.setColor(color);
		cube.fillRect(this.x, this.y, width, height);
		color=Color.black;
		cube.setColor(color);
		cube.drawRect(this.x, this.y, width, height);
	}
	public int getX() {
		return x;
	}
	public void setX(int x) {
		this.x = x;
	}
	public int getY() {
		return y;
	}
	public void setY(int y) {
		this.y = y;
	}
}
